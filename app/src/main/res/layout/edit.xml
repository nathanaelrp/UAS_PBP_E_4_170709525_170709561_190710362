<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/backeditproduk"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/white"
            android:text="Kembali"
            android:textStyle="bold"
            android:textColor="@color/button"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="EDIT DATA"
            android:textColor="@color/button"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--            android:inputType="textCapSentences"-->

        <ImageView
            android:id="@+id/foto_produk"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:layout_marginTop="16dp"
            tools:srcCompat="@drawable/ic_img" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadImage"
            android:layout_marginHorizontal="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="21dp"
            android:backgroundTint="@color/button"
            android:padding="10dp"
            android:text="Upload Image"
            android:textColor="@color/background"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundColor="@color/background"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:id="@+id/produknama"
            app:hintTextColor="@color/button"
            android:hint="Nama Obat"
            app:boxStrokeColor="@color/button"
            app:startIconTint="@color/button">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nama_produk"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/button"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundColor="@color/background"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:id="@+id/produkharga"
            app:hintTextColor="@color/button"
            android:hint="Harga Obat"
            app:boxStrokeColor="@color/button"
            app:startIconTint="@color/button">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/harga_produk"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textColor="@color/button"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundColor="@color/background"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:id="@+id/produkjumlah"
            app:hintTextColor="@color/button"
            android:hint="Stok Obat"
            app:boxStrokeColor="@color/button"
            app:startIconTint="@color/button">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/jumlah_produk"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textColor="@color/button"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/button"
            android:text="SIMPAN"
            android:textColor="@color/background"/>
        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            app:backgroundTint="@android:color/holo_red_light"
            android:id="@+id/btnHapus"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hapus"
            android:textStyle="bold"
            android:textColor="@color/background"/>

    </LinearLayout>
</ScrollView>